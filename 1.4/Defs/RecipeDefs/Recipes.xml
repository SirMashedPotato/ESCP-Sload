			</filter>
			<count>40</count>
		  </li>
		</ingredients>
		<fixedIngredientFilter>
		  <thingDefs>
			<li>ESCP_Egg_Sload</li>
		  </thingDefs>
		</fixedIngredientFilter>
		<products>
		  <ESCP_SloadSoap>20</ESCP_SloadSoap>
		</products>
