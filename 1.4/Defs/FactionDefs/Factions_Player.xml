<Defs>
  
	<FactionDef ParentName="PlayerFactionBase">
		<defName>ESCP_SloadPlayerColony</defName>
		<label>Sload arrivals</label>
		<description>A colony of survivors from the Best Soap Enterprises colonisation ship.</description>
		<isPlayer>true</isPlayer>
		<basicMemberKind>ESCP_SloadKind</basicMemberKind>
		<pawnSingular>Sload offworlder</pawnSingular>
		<pawnsPlural>Sload offworlders</pawnsPlural>
		<techLevel>Industrial</techLevel>
		<backstoryFilters>
		  <li>
			<categories>
			  <li>Offworld</li>
			</categories>
		  </li>
		</backstoryFilters>
		<factionIconPath>World/WorldObjects/Expanding/ESCP_SloadSettlement</factionIconPath>
		<playerInitialSettlementNameMaker>NamerInitialSettlementColony</playerInitialSettlementNameMaker>
		<factionNameMaker>NamerFactionOutlander</factionNameMaker>
		<settlementNameMaker>NamerSettlementOutlander</settlementNameMaker>
		<allowedCultures>
			<li>Astropolitan</li>
			<li>ESCP_Sload</li>
		</allowedCultures>
		<geneticVariance>1</geneticVariance>
		<startingResearchTags>
		  <li>ClassicStart</li>
		  <li>ESCP_SloadStart_Industrial</li>
		</startingResearchTags>
		<startingTechprintsResearchTags>
		  <li>ClassicStart</li>
		  <li>ClassicStartTechprints</li>
		</startingTechprintsResearchTags>
		<apparelStuffFilter>
		  <thingDefs>
			<li>Synthread</li>
		  </thingDefs>
		</apparelStuffFilter>
		<modExtensions>
			<li Class="ESCP_RaceTools.FactionProperties">
				<isSloadFaction>true</isSloadFaction>
				<factionTags>
					<li>ESCP_Sload</li>
				</factionTags>
			</li>
		</modExtensions>
		<disallowedPrecepts>
			<li MayRequire="Ludeon.RimWorld.Ideology">ApparelDesired_Strong_Subordinate</li>
			<li MayRequire="Ludeon.RimWorld.Ideology">ApparelDesired_Soft_Subordinate</li>
		</disallowedPrecepts>
	</FactionDef>
	
