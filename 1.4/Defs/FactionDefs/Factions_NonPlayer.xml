<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!-- ==========[ESCP_DunmerNonPlayerFaction_Base]========== -->
	<FactionDef ParentName="ESCP_NonPlayerFactionBase_Tribal" Name="ESCP_SloadNonPlayerFaction_Base" Abstract="True">
		<modExtensions>
			<li Class="ESCP_RaceTools.SettlementPreference">
				<chance>1.0</chance>
				<requiresWater>true</requiresWater>
				<IgnoreBiomeSelectionWeight>false</IgnoreBiomeSelectionWeight>
			</li>
			<li Class="ESCP_RaceTools.FactionProperties">
				<factionTags>
					<li>ESCP_SloadFaction</li>
					<li>ESCP_SloadFactionNonPlayer</li>
				</factionTags>
			</li>
		</modExtensions>
		<factionIconPath>World/WorldObjects/Expanding/ESCP_SloadSettlement</factionIconPath>
		<factionNameMaker>ESCP_Sload_NamerFaction</factionNameMaker>
		<settlementNameMaker>ESCP_Sload_NamerSettlement</settlementNameMaker>
		<allowedCultures>
			<li>ESCP_SloadCulture</li>
		</allowedCultures>
		<structureMemeWeights Inherit="False">
			<Structure_Ideological MayRequire="Ludeon.RimWorld.Ideology">999</Structure_Ideological>
		</structureMemeWeights>
		<caravanTraderKinds Inherit="False">
			<li>ESCP_SloadTrader</li>
			<li>ESCP_SloadTrader_Drug</li>
		</caravanTraderKinds>
		<baseTraderKinds Inherit="False">
			<li>ESCP_SloadTrader</li>
		</baseTraderKinds>
		<canSiege>false</canSiege>
		<canStageAttacks>false</canStageAttacks>
		<pawnGroupMakers>
			<li>
				<!-- Normal fights, ranged with melee mix-ins -->
				<kindDef>Combat</kindDef>
				<commonality>100</commonality>
				<options>
					<Tribal_Warrior>10</Tribal_Warrior>
					<Tribal_Archer>10</Tribal_Archer>
					<ESCP_SloadKingdom_PlagueBearer>5</ESCP_SloadKingdom_PlagueBearer>
					<ESCP_SloadKingdom_Lord>1.5</ESCP_SloadKingdom_Lord>
				</options>
			</li>
			<li>
				<!-- Peaceful -->
				<kindDef>Peaceful</kindDef>
				<options>
					<Tribal_Warrior>7</Tribal_Warrior>
					<Tribal_Archer>10</Tribal_Archer>
					<ESCP_SloadKingdom_Subject>5</ESCP_SloadKingdom_Subject>
					<ESCP_SloadKingdom_Lord>1.5</ESCP_SloadKingdom_Lord>
				</options>
			</li>
			<li>
				<kindDef>Trader</kindDef>
				<traders>
					<ESCP_SloadKingdom_Trader>1</ESCP_SloadKingdom_Trader>
				</traders>
				<carriers>
					<MorrowRim_Guar MayRequireAnyOf="SirMashedPotato.MorrowRim,SirMashedPotato.MorrowRim.JustTheAnimals">10</MorrowRim_Guar>
					<Muffalo>6</Muffalo>
					<Dromedary>5</Dromedary>
					<Alpaca>2.5</Alpaca>
					<Elephant>2</Elephant>
				</carriers>
				<guards>
					<Tribal_Warrior>7</Tribal_Warrior>
					<Tribal_Archer>10</Tribal_Archer>
				</guards>
			</li>
			<li>
				<kindDef>Settlement</kindDef>
				<options>
					<Tribal_Warrior>7</Tribal_Warrior>
					<Tribal_Archer>10</Tribal_Archer>
					<ESCP_SloadKingdom_PlagueBearer>7</ESCP_SloadKingdom_PlagueBearer>
					<ESCP_SloadKingdom_Lord>10</ESCP_SloadKingdom_Lord>
				</options>
			</li>
		</pawnGroupMakers>
		<settlementTexturePath>World/WorldObjects/TribalSettlement</settlementTexturePath>
	</FactionDef>
	<!-- ==========[ESCP_DunmerNonPlayerFaction_Base]========== -->
	<FactionDef ParentName="ESCP_SloadNonPlayerFaction_Base">
		<defName>ESCP_DunmerNonPlayerFaction_Kingdom</defName>
		<label>Sload kingdom</label>
		<description>A collection of Sload outposts, under the rule of a King. Sload aren't exactly the most welcoming, though most aren't exactly welcoming to Sload. They are willing to trade with outsiders, though most outsiders aren't willing to trade with them.\n\nWhile Sload Kindgoms will not raid their enemies, they will unleash the Thrassian Plague upon them.</description>
		<colorSpectrum>
			<li>(0.0, 0.9, 0.7)</li>
			<li>(0.2, 0.9, 0.5)</li>
			<li>(0.7, 0.2, 1.0)</li>
		</colorSpectrum>
		<requiredMemes>
			<li MayRequire="Ludeon.RimWorld.Ideology">ESCP_SloadicWays</li>
		</requiredMemes>
		<disallowedMemes>
			<li MayRequire="Ludeon.RimWorld.Ideology">Supremacist</li>
			<li MayRequire="Ludeon.RimWorld.Ideology">Raider</li>
		</disallowedMemes>
		<disallowedPrecepts>
			<li MayRequire="Ludeon.RimWorld.Ideology">ApparelDesired_Strong_Subordinate</li>
			<li MayRequire="Ludeon.RimWorld.Ideology">ApparelDesired_Soft_Subordinate</li>
		</disallowedPrecepts>
		<configurationListOrderPriority>30</configurationListOrderPriority>
	</FactionDef>
</Defs>