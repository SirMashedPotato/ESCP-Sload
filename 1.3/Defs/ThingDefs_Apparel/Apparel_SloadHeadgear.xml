		  <StuffEffectMultiplierInsulation_Heat>0.10</StuffEffectMultiplierInsulation_Heat>
		  <EquipDelay>0.8</EquipDelay>
		</statBases>
		<equippedStatOffsets>
		  <SocialImpact>0.15</SocialImpact>
		  <SlaveSuppressionOffset MayRequire="Ludeon.RimWorld.Ideology">-0.05</SlaveSuppressionOffset>
		</equippedStatOffsets>
		<costStuffCount>60</costStuffCount>	<!-- * 3 -->
		<stuffCategories>
		  <li>Fabric</li>
		  <li>Leathery</li>
		</stuffCategories>
		<apparel>
		  <wornGraphicPath>Things/Pawn/Humanlike/Apparel/ESCP_Apparel_SloadColovianHelm/ESCP_Apparel_SloadColovianHelm</wornGraphicPath>
		  <!--<useWornGraphicMask>true</useWornGraphicMask> BREAKS LAYERING -->
		  <bodyPartGroups>
			<li>UpperHead</li>
		  </bodyPartGroups>
		  <layers>
			<li>Overhead</li>
		  </layers>
		  <tags>
			<li>ESCP_SloadMedieval</li>
			<li>ESCP_SloadCultured</li>
		  </tags>
		  <defaultOutfitTags>
			<li>Worker</li>
		  </defaultOutfitTags>
		</apparel>
		<colorGenerator Class="ColorGenerator_StandardApparel" />
	</ThingDef>

</Defs>