<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- Fairly standard hood -->

	<ThingDef ParentName="HatMakeableBase">
		<defName>ESCP_Apparel_SloadHood</defName>
		<label>Sload hood</label>
		<description>A draped hood which covers the head and ears, specially designed to fit on the oversized head of a Sload, and hide some of their unsightliness.</description>
		<recipeMaker>
		  <researchPrerequisite>ComplexClothing</researchPrerequisite>
		</recipeMaker>
		<graphicData>
		  <texPath>Things/Pawn/Humanlike/Apparel/ESCP_Apparel_SloadHood/ESCP_Apparel_SloadHood</texPath>
		  <graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<uiIconScale>1.15</uiIconScale>
		<statBases>
		  <MaxHitPoints>80</MaxHitPoints>
		  <WorkToMake>6000</WorkToMake>
		  <Mass>0.1</Mass>
		  <EquipDelay>0.8</EquipDelay>
		  <StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
		  <StuffEffectMultiplierInsulation_Cold>0.10</StuffEffectMultiplierInsulation_Cold>
		  <StuffEffectMultiplierInsulation_Heat>0.25</StuffEffectMultiplierInsulation_Heat>
		</statBases>
		<equippedStatOffsets>
		  <SocialImpact>0.05</SocialImpact>
		  <SlaveSuppressionOffset MayRequire="Ludeon.RimWorld.Ideology">-0.05</SlaveSuppressionOffset>
		</equippedStatOffsets>
		<costStuffCount>150</costStuffCount>	<!-- * 3 -->
		<stuffCategories>
		  <li>Fabric</li>
		  <li>Leathery</li>
		</stuffCategories>
		<apparel>
		  <wornGraphicPath>Things/Pawn/Humanlike/Apparel/ESCP_Apparel_SloadHood/ESCP_Apparel_SloadHood</wornGraphicPath>
		  <bodyPartGroups>
			<li>UpperHead</li>
		  </bodyPartGroups>
		  <layers>
			<li>Overhead</li>
		  </layers>
		  <tags>
			<li>ESCP_SloadMedieval</li>
			<li>ESCP_SloadHood</li>
		  </tags>
		  <defaultOutfitTags>
			<li>Worker</li>
		  </defaultOutfitTags>
		</apparel>
		<colorGenerator Class="ColorGenerator_StandardApparel" />
	</ThingDef>
	
	
	<!-- Head cap -->

	<ThingDef ParentName="HatMakeableBase">
		<defName>ESCP_Apparel_SloadHeadCap</defName>
		<label>Sload head cap</label>
		<description>A tight fitting cap that covers the top of the head, specially designed to fit on the oversized head of a Sload.</description>
		<recipeMaker>
		  <researchPrerequisite>ComplexClothing</researchPrerequisite>
		</recipeMaker>
		<graphicData>
		  <texPath>Things/Pawn/Humanlike/Apparel/ESCP_Apparel_SloadHeadCap/ESCP_Apparel_SloadHeadCap</texPath>
		  <graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<uiIconScale>1.15</uiIconScale>
		<statBases>
		  <MaxHitPoints>80</MaxHitPoints>
		  <WorkToMake>6000</WorkToMake>
		  <Mass>0.1</Mass>
		  <EquipDelay>0.8</EquipDelay>
		  <StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
		  <StuffEffectMultiplierInsulation_Cold>0.05</StuffEffectMultiplierInsulation_Cold>
		  <StuffEffectMultiplierInsulation_Heat>0.3</StuffEffectMultiplierInsulation_Heat>
		</statBases>
		<equippedStatOffsets>
		  <SocialImpact>0.05</SocialImpact>
		  <SlaveSuppressionOffset MayRequire="Ludeon.RimWorld.Ideology">-0.05</SlaveSuppressionOffset>
		</equippedStatOffsets>
		<costStuffCount>120</costStuffCount>
		<stuffCategories>
		  <li>Fabric</li>
		  <li>Leathery</li>
		</stuffCategories>
		<apparel>
		  <wornGraphicPath>Things/Pawn/Humanlike/Apparel/ESCP_Apparel_SloadHeadCap/ESCP_Apparel_SloadHeadCap</wornGraphicPath>
		  <bodyPartGroups>
			<li>UpperHead</li>
		  </bodyPartGroups>
		  <layers>
			<li>Overhead</li>
		  </layers>
		  <tags>
			<li>ESCP_SloadMedieval</li>
		  </tags>
		  <defaultOutfitTags>
			<li>Worker</li>
		  </defaultOutfitTags>
		</apparel>
		<colorGenerator Class="ColorGenerator_StandardApparel" />
	</ThingDef>
	
	<!-- Ash Mask -->

	<ThingDef ParentName="HatMakeableBase">
		<defName>ESCP_Apparel_SloadAshMask</defName>
		<label>Sload ash mask</label>
		<description>A specialised mask which allows unhindered breathing during ash storms, specially designed to fit on the oversized head of a Sload.</description>
		<modExtensions>
			<li MayRequire="SirMashedPotato.MorrowRim" Class="MorrowRim.ExtendedRaceProperties">
                <ashResistant>Resistant</ashResistant>
            </li>
		</modExtensions>
		<recipeMaker>
		  <researchPrerequisite>Smithing</researchPrerequisite>
		  <recipeUsers Inherit="False">
			<li>ElectricSmithy</li>
			<li>FueledSmithy</li>
		  </recipeUsers>
		</recipeMaker>
		<graphicData>
		  <texPath>Things/Pawn/Humanlike/Apparel/ESCP_Apparel_SloadAshMask/ESCP_Apparel_SloadAshMask</texPath>
		  <graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<uiIconScale>1.15</uiIconScale>
		<statBases>
		  <MaxHitPoints>80</MaxHitPoints>
		  <WorkToMake>12000</WorkToMake>
		  <Mass>0.15</Mass>
		  <EquipDelay>1.2</EquipDelay>
		  <StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
		  <StuffEffectMultiplierInsulation_Cold>0.1</StuffEffectMultiplierInsulation_Cold>
		  <StuffEffectMultiplierInsulation_Heat>0.3</StuffEffectMultiplierInsulation_Heat>
		</statBases>
		<equippedStatOffsets>
		  <ToxicSensitivity>-0.15</ToxicSensitivity>
		  <SocialImpact>0.1</SocialImpact>
		</equippedStatOffsets>
		<costStuffCount>60</costStuffCount>
		<stuffCategories>
		  <li>Metallic</li>
		  <li>Woody</li>
		</stuffCategories>
		<costList>
		</costList>
		<apparel>
		  <wornGraphicPath>Things/Pawn/Humanlike/Apparel/ESCP_Apparel_SloadAshMask/ESCP_Apparel_SloadAshMask</wornGraphicPath>
		  <useWornGraphicMask>true</useWornGraphicMask>	<!-- Fixes layering -->
		  <forceRenderUnderHair>true</forceRenderUnderHair>
		  <bodyPartGroups>
			<li>Eyes</li>
			<li>Mouth</li>
			<li>Teeth</li>
		  </bodyPartGroups>
		  <layers>
			<li>EyeCover</li>
		  </layers>
		  <tags>
			<li>ESCP_SloadMedieval</li>
		  </tags>
		  <defaultOutfitTags>
			<li>Worker</li>
		  </defaultOutfitTags>
		</apparel>
		<colorGenerator Class="ColorGenerator_StandardApparel" />
	</ThingDef>

	<!-- Colovian Fur Helm -->

