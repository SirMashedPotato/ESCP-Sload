	<!-- Colovian Fur Helm -->
	
	<ThingDef ParentName="CowboyHat">
		<defName>ESCP_Apparel_SloadColovianFurHelm</defName>
		<label>Sload colovian fur helm</label>
		<description>A practical, yet stylish, hat, specially designed to fit on the oversized head of a Sload. Improves social impact, and is rather warm.</description>
		<graphicData>
			<texPath>Things/Pawn/Humanlike/Apparel/ESCP_Apparel_SloadColovianHelm/ESCP_Apparel_SloadColovianHelm</texPath>
			<shaderType>CutoutComplex</shaderType>
		</graphicData>
		<costStuffCount>60</costStuffCount>	<!-- * 3 -->
		<uiIconScale>1.25</uiIconScale>
		<statBases>
		  <WorkToMake>1800</WorkToMake>
		  <Mass>0.14</Mass>
		  <StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
		  <StuffEffectMultiplierInsulation_Cold>0.40</StuffEffectMultiplierInsulation_Cold>
		  <StuffEffectMultiplierInsulation_Heat>0.10</StuffEffectMultiplierInsulation_Heat>
		  <EquipDelay>0.8</EquipDelay>
		</statBases>
		<equippedStatOffsets>
		  <SocialImpact>0.15</SocialImpact>
		</equippedStatOffsets>
		<apparel>
		  <wornGraphicPath>Things/Pawn/Humanlike/Apparel/ESCP_Apparel_SloadColovianHelm/ESCP_Apparel_SloadColovianHelm</wornGraphicPath>
		  <useWornGraphicMask>true</useWornGraphicMask>
		  <tags>
			<li>ESCP_SloadMedieval</li>
			<li>ESCP_SloadCultured</li>
		  </tags>
		</apparel>
	</ThingDef>

</Defs>