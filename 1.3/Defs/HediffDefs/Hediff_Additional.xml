<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<HediffDef>
		<defName>ESCP_SloadThrallPassive</defName>
		<hediffClass>HediffWithComps</hediffClass>
		<label>Sload thrall</label>
		<description>A corpse puppeteered by a Sload. While the corpse is technically alive again, the mind is barely consciousness, and effectively simply an extension of its masters.\n\nDisables almost all needs and thoughts, as well as providing complete immunity to pain.</description>
		<defaultLabelColor>(0.8, 0.6, 1.0)</defaultLabelColor>
		<scenarioCanAdd>true</scenarioCanAdd>
		<maxSeverity>1.0</maxSeverity>
		<isBad>false</isBad>
		<disablesNeeds>
			<li>Mood</li>
			<li>Food</li>
			<li>Rest</li>
			<li>Joy</li>
			<li>Beauty</li>
			<li>Comfort</li>
			<li>Outdoors</li>
			<li>Indoors</li>
			<li>DrugDesire</li>
			<li>RoomSize</li>
			<li MayRequire="Ludeon.RimWorld.Royalty">Authority</li>
			<li MayRequire="VanillaExpanded.VMemesE">VME_Anonymity</li>
			<li MayRequire="VanillaExpanded.VMemesE">VME_Corruption</li>
		</disablesNeeds>
		<comps>
		  <li>
			<compClass>ESCP_RaceTools.HediffComp_SloadThrall</compClass>
		  </li>
		</comps>
		<stages>
			<li>
				<painOffset>-9.99</painOffset>
			</li>
		</stages>
	</HediffDef>
	
	<HediffDef>
		<defName>ESCP_SloadDiseaseImmunity</defName>
		<label>Sload disease immunity</label>
		<description>Sloads are immune to many common diseases, and some less common ones.</description>
		<defaultLabelColor>(0.8, 0.6, 1.0)</defaultLabelColor>
		<scenarioCanAdd>true</scenarioCanAdd>
		<maxSeverity>1.0</maxSeverity>
		<isBad>false</isBad>
		<stages>
			<li>
			  <makeImmuneTo>
					<li>Flu</li>
					<li>Plague</li>
					<li>Malaria</li>
					<li>SleepingSickness</li>
					<li>ESCP_ThrassianPlague</li>
			  </makeImmuneTo>
			</li>
      </stages>
	</HediffDef>

</Defs>